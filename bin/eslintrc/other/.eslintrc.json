{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "ignorePatterns": [
    "**/node_modules/",
    "**/dist/",
    "**/public",
    "**/build/",
    "*.test.js",
    "*.min.js"
  ],
  "extends": ["airbnb-base", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "double"],
    "max-len": ["warn", { "code": 100, "ignoreComments": true }],
    "comma-dangle": ["error", "never"],
    "import/extensions": "off"
  }
}
